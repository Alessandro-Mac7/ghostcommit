{
  "name": "ghostcommit",
  "version": "1.0.0",
  "description": "Your commits, ghostwritten by AI. Local-first commit message generator that learns your style.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ghostcommit": "./bin/ghostcommit.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src/ tests/",
    "lint:fix": "biome check --fix src/ tests/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "git",
    "cli",
    "commit",
    "conventional-commits",
    "ollama",
    "commit-message",
    "local-first"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@google/generative-ai": "^0.24.1",
    "@octokit/rest": "^22.0.1",
    "chalk": "^5.4.1",
    "commander": "^14.0.3",
    "groq-sdk": "^0.37.0",
    "openai": "^6.18.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^22.13.1",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
